    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ListView
        android:id="@+id/knownVocabsLV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linear_layout_frag_six"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_blue"
        android:id="@+id/linear_layout_frag_six"
        android:weightSum="1">
        <ImageButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerInside"
            android:padding="22dp"
            android:background="@android:color/transparent"
            android:id="@+id/imageButton_reset"
            android:src="@drawable/reset_blue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="Du hast schon 8 von 100 Vokabeln im LangzeitgedÃ¤chtnis!"

            android:textSize="16sp"
            android:textColor="@color/color_primary"
            android:id="@+id/textView"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerInside"
            android:padding="22dp" />

    </LinearLayout>




</RelativeLayout>