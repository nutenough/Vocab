<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/addFotoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="@string/add_foto"
        android:textColor="@color/color_text_primary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/addFotoIV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addFotoTV"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@drawable/camera_blue" />

    <TextView
        android:id="@+id/addSoundTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addFotoIV"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="@string/add_sound"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/addSoundIV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addSoundTV"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

</RelativeLayout>