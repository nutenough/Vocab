<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sourceVocabTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="@string/source_language"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/sourceVocabET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sourceVocabTV"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/source_vocab_hint"
        android:textSize="20sp" />

    <Button
        android:id="@+id/translateBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sourceVocabET"
        android:layout_margin="16dp"
        android:background="@color/color_primary"
        android:text="@string/translate"
        android:textColor="@color/color_white" />

    <TextView
        android:id="@+id/targetVocabTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/translateBTN"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="@string/target_language"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/targetVocabET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/targetVocabTV"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/target_vocab_hint"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/selectListTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/targetVocabET"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="@string/select_list"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectListTV"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:prompt="@string/list_prompt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/vocabCancelBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/color_primary"
            android:padding="30dp"
            android:text="@string/language_negative_button"
            android:textColor="@color/color_white" />

        <Button
            android:id="@+id/vocabAddBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_accent"
            android:padding="30dp"
            android:text="HinzufÃ¼gen"
            android:textColor="@color/color_white" />

    </LinearLayout>

</RelativeLayout>