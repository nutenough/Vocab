<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/wordClassTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:text="Wortart"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/wordClassET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wordClassTV"
        android:layout_margin="16dp"
        android:hint="z.B. Substantiv" />

    <TextView
        android:id="@+id/importanceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wordClassET"
        android:layout_margin="16dp"
        android:text="Wichtigkeit"
        android:textSize="20sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wordClassET"
        android:layout_toEndOf="@+id/importanceTV"
        android:layout_toRightOf="@+id/importanceTV"
        android:numStars="3" />

</RelativeLayout>