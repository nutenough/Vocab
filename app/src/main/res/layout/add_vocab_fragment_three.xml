<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/wordClassTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="Wortart"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/wordClassET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wordClassTV"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="z.B. Substantiv" />

    <TextView
        android:id="@+id/importanceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wordClassET"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="Wichtigkeit"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/importanceTV"
        android:layout_centerHorizontal="true"
        android:numStars="3" />

</RelativeLayout>